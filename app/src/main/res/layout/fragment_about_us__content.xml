<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E2E5DE"
        tools:context=".presentation.fragments.aboutus.AboutAsContentFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="0dp"
            app:cardCornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/about"
                            style="@style/textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_margin="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/avenir_roman"
                            android:text="About the App"
                            android:textColor="#57585A"
                            app:layout_constraintBottom_toTopOf="@+id/textView3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/avenir_roman"
                            android:text="The content in the TypeU App has been created in conjunction with the Diabetes Education Team at Childrenâ€™s Healthcare of Atlanta based off the Diabetes Education sessions for new onset patients. The educational content is informed by the 2023 Standards of Care in Diabetes that is regularly published by the American Diabetes Association."
                            android:textAlignment="textStart"
                            android:textColor="@color/gray_200"
                            android:textSize="17sp"
                            app:fontFamily="@font/avenir_roman"
                            app:layout_constraintBottom_toTopOf="@+id/ada"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/about" />

                        <TextView
                            android:id="@+id/ada"
                            style="@style/textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/avenir_roman"
                            android:text="American Diabetes Association"
                            android:textColor="#57585A"
                            app:layout_constraintBottom_toTopOf="@+id/cardView_about_us_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView3" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView_about_us_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            app:layout_constraintTop_toBottomOf="@+id/ada"
                            tools:layout_editor_absoluteX="20dp">


                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="102dp"
                                android:layout_margin="20dp"
                                android:padding="0dp"
                                android:src="@drawable/about_us_american_diabetes_association" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/textVils"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_marginBottom="50dp"
                            android:fontFamily="@font/avenir_roman"
                            android:text="The American Diabetes Association (ADA) is a United States-based nonprofit that seeks to educate the public about diabetes and to help those affected by it through funding research to manage, cure and prevent diabetes."
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/gray_200"
                            android:textSize="17sp"
                            app:fontFamily="@font/avenir_roman"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cardView_about_us_content"
                            tools:layout_editor_absoluteX="20dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>
            </ScrollView>


        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
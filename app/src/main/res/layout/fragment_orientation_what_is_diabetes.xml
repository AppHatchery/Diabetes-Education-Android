<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/scrollIndicatorText"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0%"
                tools:ignore="HardcodedText" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/scrollIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:indeterminate="false"
                android:progress="0"
                app:indicatorColor="@color/yellow_500"
                app:trackCornerRadius="20dp"
                app:trackThickness="10dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <edu.emory.diabetes.education.views.BaseWebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp" />
        </ScrollView>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#57585A"
                android:background="@drawable/shape_rectangle_stroke_white_radius_15px"
                android:orientation="horizontal"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:padding="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/parent"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/white_100"
                    android:layout_marginHorizontal="11dp"
                    android:src="@drawable/ic_text"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/white_100"
                    android:layout_marginHorizontal="11dp"
                    android:src="@drawable/ic_search"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/white_100"
                    android:layout_marginHorizontal="11dp"
                    android:src="@drawable/ic__bookmark_outlined"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>
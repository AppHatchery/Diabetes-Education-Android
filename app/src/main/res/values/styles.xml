<resources>

    <style name="textTitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gotham_rounded_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gotham_rounded_medium</item>
        <item name="android:textColor">@color/green_1000</item>
    </style>
    >

    <style name="editTextCalculatorStyle" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/gotham_rounded_medium</item>
        <item name="android:textColor">@color/green_900</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">3</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_rectangle_radius_10px</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>


    <style name="textViewCalculatorStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gotham_rounded_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="textViewMedicalTeamStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gotham_rounded_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/gotham_rounded_medium</item>
        <item name="android:textColor">@color/green_900</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize20Percent" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <!-- Customize the selected and unselected tab text colors -->
        <item name="tabTextColor">@color/gray_100</item>
        <item name="tabSelectedTextColor">#FAFAFA</item>

        <!-- Customize the tab indicator color and height -->
<!--        <item name="tabIndicatorColor">@color/green_1000</item>-->
<!--        <item name="tabIndicatorHeight">@dimen/my_tab_indicator_height</item>-->

        <!-- Customize the tab background color -->
        <item name="tabBackground">@drawable/about_us_tab_indicator</item>
    </style>


</resources>